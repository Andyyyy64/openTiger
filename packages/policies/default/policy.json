{
  "$schema": "../schemas/policy.schema.json",
  "allowedPaths": ["**/*"],
  "deniedPaths": [
    ".env",
    ".env.*",
    "**/*.pem",
    "**/*.key",
    "**/secrets/**"
  ],
  "maxLinesChanged": 500,
  "maxFilesChanged": 20,
  "deniedCommands": [
    "rm -rf /",
    "rm -rf /*",
    "sudo",
    "chmod 777",
    "curl.*|.*sh",
    "wget.*|.*sh"
  ],
  "autoMerge": {
    "enabled": true,
    "level": "low",
    "maxRiskLevel": "medium",
    "requiredChecks": ["test", "lint", "typecheck"]
  },
  "tokenLimits": {
    "perTask": 1000000,
    "perDay": 50000000
  }
}

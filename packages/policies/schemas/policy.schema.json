{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "openTiger Policy",
  "description": "Policy defining behavioral constraints for agents",
  "type": "object",
  "properties": {
    "allowedPaths": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Paths allowed for modification (glob)",
      "default": ["**/*"]
    },
    "deniedPaths": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Paths denied for modification (glob)",
      "default": []
    },
    "maxLinesChanged": {
      "type": "integer",
      "minimum": 1,
      "description": "Maximum number of changed lines",
      "default": 500
    },
    "maxFilesChanged": {
      "type": "integer",
      "minimum": 1,
      "description": "Maximum number of changed files",
      "default": 20
    },
    "deniedCommands": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Denied commands (regular expressions)",
      "default": []
    },
    "autoMerge": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether to enable auto-merge",
          "default": false
        },
        "maxRiskLevel": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "description": "Maximum risk level allowed for auto-merge",
          "default": "low"
        },
        "requiredChecks": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Required CI check names",
          "default": []
        }
      }
    },
    "baseRepoRecovery": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "description": "Strictness of local base repository recovery (low is lenient, high is strict)",
          "default": "medium"
        }
      }
    },
    "tokenLimits": {
      "type": "object",
      "properties": {
        "perTask": {
          "type": "integer",
          "minimum": 1,
          "description": "Token limit per task",
          "default": 1000000
        },
        "perDay": {
          "type": "integer",
          "minimum": 1,
          "description": "Token limit per day",
          "default": 50000000
        }
      }
    }
  }
}

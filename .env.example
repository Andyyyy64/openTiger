# openTiger environment variables
DATABASE_URL=postgresql://opentiger:opentiger@localhost:5432/opentiger
REDIS_URL=redis://localhost:6379
GITHUB_AUTH_MODE=gh
# Required only when GITHUB_AUTH_MODE=token
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx
GITHUB_WEBHOOK_SECRET=your-webhook-secret
GITHUB_OWNER=your-org
GITHUB_REPO=your-repo

# OpenCode / Gemini
GEMINI_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxx
# Fallback model when Gemini 3 function calling fails
OPENCODE_FALLBACK_MODEL=google/gemini-2.5-flash

# Tester
#TESTER_INSTRUCTIONS_PATH=/absolute/path/to/tester.md

# openTiger API port
OPENTIGER_API_PORT=4301
# openTiger dashboard port
OPENTIGER_DASHBOARD_PORT=5190
# Vite/Playwright port for E2E tests
OPENTIGER_E2E_PORT=5174
API_SECRET=your-api-secret
TASK_TIMEOUT_SECONDS=3600
LOG_LEVEL=info
# OPENTIGER_LOG_DIR (optional; defaults to <repo-root>/raw-logs when unset)

# Runtime settings (model, mode, worker count, etc.) are managed via the DB config table
# Execution environment selector (host/sandbox) is also managed via system_config

# h1ve 環境変数設定
DATABASE_URL=postgresql://h1ve:h1ve@localhost:5432/h1ve
REDIS_URL=redis://localhost:6379
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx
GITHUB_WEBHOOK_SECRET=your-webhook-secret
GITHUB_OWNER=your-org
GITHUB_REPO=your-repo

# OpenCode / Gemini
GEMINI_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxx
OPENCODE_MODEL=google/gemini-3-flash-preview
# Gemini 3のfunction callingで失敗した場合の退避先
OPENCODE_FALLBACK_MODEL=google/gemini-2.5-flash
PLANNER_MODEL=google/gemini-3-pro-preview
JUDGE_MODEL=google/gemini-3-pro-preview
WORKER_MODEL=google/gemini-3-flash-preview
TESTER_MODEL=google/gemini-3-pro-preview
PLANNER_USE_REMOTE=false
PLANNER_REPO_URL=https://github.com/your-org/your-repo

# Tester
#TESTER_INSTRUCTIONS_PATH=/absolute/path/to/tester.md

REPO_MODE=git
LOCAL_REPO_PATH=/path/to/local/repo
LOCAL_WORKTREE_ROOT=/tmp/h1ve-worktree
JUDGE_MODE=auto
LOCAL_POLICY_MAX_LINES=5000
LOCAL_POLICY_MAX_FILES=100

# h1ve APIの待ち受けポート
H1VE_API_PORT=4301
# h1veダッシュボードの待ち受けポート
H1VE_DASHBOARD_PORT=5190
API_SECRET=your-api-secret
MAX_CONCURRENT_WORKERS=10
TASK_TIMEOUT_SECONDS=3600
DAILY_TOKEN_LIMIT=50000000
HOURLY_TOKEN_LIMIT=5000000
TASK_TOKEN_LIMIT=1000000
AUTO_REPLAN=true
REPLAN_REQUIREMENT_PATH=/home/andy/project/work/h1ve/docs/requirement.md
REPLAN_WORKDIR=/home/andy/project/work/h1ve
LOG_LEVEL=info
H1VE_LOG_DIR=/home/andy/project/work/h1ve/raw-logs

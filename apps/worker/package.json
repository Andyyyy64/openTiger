{
  "name": "@openTiger/worker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "WORKER_INDEX=1 tsx watch --env-file=../../.env src/main.ts",
    "dev:2": "WORKER_INDEX=2 tsx watch --env-file=../../.env src/main.ts",
    "dev:3": "WORKER_INDEX=3 tsx watch --env-file=../../.env src/main.ts",
    "dev:4": "WORKER_INDEX=4 tsx watch --env-file=../../.env src/main.ts",
    "dev:runtime": "tsx watch --env-file=../../.env src/main.ts",
    "dev:tester": "AGENT_ROLE=tester WORKER_INDEX=1 tsx watch --env-file=../../.env src/main.ts",
    "dev:tester:2": "AGENT_ROLE=tester WORKER_INDEX=2 tsx watch --env-file=../../.env src/main.ts",
    "dev:docser": "AGENT_ROLE=docser WORKER_INDEX=1 tsx watch --env-file=../../.env src/main.ts",
    "build": "tsup",
    "start": "node dist/start.js",
    "start:fresh": "pnpm --filter @openTiger/worker... build && node dist/start.js",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --passWithNoTests",
    "lint": "oxlint .",
    "lint:ci": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@openTiger/core": "workspace:*",
    "@openTiger/db": "workspace:*",
    "@openTiger/llm": "workspace:*",
    "@openTiger/plugin-sdk": "workspace:*",
    "@openTiger/plugin-tiger-research": "workspace:*",
    "@openTiger/queue": "workspace:*",
    "@openTiger/vcs": "workspace:*",
    "bullmq": "^5.66.5",
    "dotenv": "^17.3.1",
    "drizzle-orm": "^0.38.4",
    "minimatch": "^10.2.0",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/pngjs": "^6.0.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  }
}

{
  "name": "@openTiger/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "pnpm --filter @openTiger/core build",
    "dev": "tsx watch --env-file=../../.env src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "oxlint .",
    "lint:ci": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@hono/zod-validator": "^0.4.2",
    "@openTiger/core": "workspace:*",
    "@openTiger/db": "workspace:*",
    "@openTiger/queue": "workspace:*",
    "@openTiger/vcs": "workspace:*",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.11.9",
    "ioredis": "^5.4.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  }
}

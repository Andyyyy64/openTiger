  "dependencies": {
    "@sebastian-code/core": "workspace:*",
    "@sebastian-code/db": "workspace:*",
    "@hono/node-server": "^1.13.8",
    "@hono/zod-validator": "^0.4.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.7.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^20.17.14",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  }
}

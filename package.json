{
  "name": "sebastian-code",
  "version": "0.1.0",
  "private": true,
  "description": "AI Agent Orchestration System for Autonomous Coding",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "ui": "pnpm --filter @sebastian-code/dashboard dev",
    "server": "pnpm --filter @sebastian-code/api dev",
    "up": "docker compose up -d postgres redis && pnpm db:push && pnpm config:export && pnpm -r --filter @sebastian-code/api --filter @sebastian-code/dashboard dev",
    "dev": "turbo run dev dev:2 dev:3 dev:4 --concurrency 30",
    "dev:all": "turbo run dev dev:1 dev:2 dev:3 dev:4 --concurrency 30",
    "build": "turbo build",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "lint": "turbo lint",
    "check": "turbo lint && turbo typecheck",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "config:import": "tsx scripts/import-config-from-env.ts",
    "config:export": "tsx scripts/export-config-to-env.ts",
    "logs:cycle": "tail -n 200 raw-logs/cycle-manager.log",
    "logs:all": "tsx ops/scripts/all-logs.ts",
    "logs:all:30m": "tsx ops/scripts/all-logs.ts --since-minutes 30",
    "logs:all:latest": "tsx ops/scripts/all-logs.ts --limit 500",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @sebastian-code/db generate",
    "db:migrate": "pnpm --filter @sebastian-code/db migrate",
    "db:push": "pnpm --filter @sebastian-code/db push",
    "db:studio": "pnpm --filter @sebastian-code/db studio",
    "requeue": "pnpm --filter @sebastian-code/cycle-manager exec tsx src/utils/requeue-failed-tasks.ts",
    "restart": "pnpm build && docker compose down -v && docker compose up -d postgres redis && sleep 3 && pnpm db:push && sleep 3 && pnpm dev & pnpm --filter @sebastian-code/worker dev:tester & pnpm --filter @sebastian-code/worker dev:tester:2 & pnpm --filter @sebastian-code/worker dev:docser"
  },
  "devDependencies": {
    "@types/node": "^20.17.14",
    "@vitest/coverage-v8": "^3.2.4",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "turbo": "^2.3.4",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}

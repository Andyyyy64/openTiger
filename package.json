{
  "name": "h1ve",
  "version": "0.1.0",
  "private": true,
  "description": "AI Agent Orchestration System for Autonomous Coding",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "turbo run dev dev:2 dev:3 dev:4 --concurrency 30",
    "dev:all": "turbo run dev dev:1 dev:2 dev:3 dev:4 --concurrency 30",
    "build": "turbo build",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "lint": "turbo lint",
    "check": "turbo lint && turbo typecheck",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @h1ve/db generate",
    "db:migrate": "pnpm --filter @h1ve/db migrate",
    "db:push": "pnpm --filter @h1ve/db push",
    "db:studio": "pnpm --filter @h1ve/db studio",
    "restart": "pnpm build && docker compose down -v && docker compose up -d postgres redis && sleep 3 && pnpm db:push && sleep 3 && pnpm dev"
  },
  "devDependencies": {
    "@types/node": "^20.17.14",
    "@vitest/coverage-v8": "^3.2.4",
    "prettier": "^3.4.2",
    "turbo": "^2.3.4",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}

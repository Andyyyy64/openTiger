{
  "$schema": "https://opencode.ai/config.json",
  "model": "google/gemini-3-flash-preview",
  "provider": {
    "gemini": {
      "options": {
        "apiKey": "{env:GEMINI_API_KEY}"
      }
    }
  },
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "read": "allow",
    "write": "allow",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "external_directory": "allow",
    "todowrite": "allow",
    "todoread": "allow",
    "question": "deny",
    "plan_enter": "deny",
    "plan_exit": "deny",
    "doom_loop": "deny"
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "openTiger Task",
  "description": "Definition of a task executed by an agent",
  "type": "object",
  "required": ["title", "goal", "allowedPaths", "commands"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Brief description of the task"
    },
    "goal": {
      "type": "string",
      "minLength": 1,
      "description": "Completion criteria (in a machine-evaluable format)"
    },
    "context": {
      "type": "object",
      "properties": {
        "files": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Related file paths"
        },
        "specs": {
          "type": "string",
          "description": "Detailed specifications"
        },
        "notes": {
          "type": "string",
          "description": "Supplementary notes"
        }
      }
    },
    "allowedPaths": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "description": "Paths allowed for modification (glob)"
    },
    "commands": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "description": "Verification commands (task completes when all succeed)"
    },
    "priority": {
      "type": "integer",
      "default": 0,
      "description": "Priority (higher values are executed first)"
    },
    "riskLevel": {
      "type": "string",
      "enum": ["low", "medium", "high"],
      "default": "low",
      "description": "Risk level"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "default": [],
      "description": "IDs of prerequisite tasks"
    },
    "timeboxMinutes": {
      "type": "integer",
      "minimum": 1,
      "default": 60,
      "description": "Expected working time (minutes)"
    }
  }
}
